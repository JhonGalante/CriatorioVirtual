<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="criatoriovirtualapp.jhonata.criatoriovirtual">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_criatoriovirtual"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_criatoriovirtual"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.LogoAppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
        <activity
            android:name=".Activities.FormularioActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Activities.DadosActivity" />
        <activity android:name=".Activities.EditActivity"
            android:windowSoftInputMode="adjustPan|stateVisible"/>
    </application>

</manifest>