<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="criatoriovirtualapp.jhonata.criatoriovirtual.Activities.FormularioActivity"
    xmlns:mask="http://schemas.android.com/apk/res-auto">

    <include android:id="@+id/toolbarprincipalId"
        layout="@layout/toolbar"> </include>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarprincipalId"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="*Nome:"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="Data de Nascimento:"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="*Número da Anilha:"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="Nome do Pai:"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="Nome da Mãe:"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="Nome do Avô(Pai):"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="Nome do Avô(Mãe):"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="Nome da Avó(Pai):"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:text="Nome da Avó(Mãe):"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nomeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/datanascEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="date"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:textColor="@android:color/black"
                    mask:allowed_chars="1234567890"
                    mask:mask="##/##/####" />



                <EditText
                    android:id="@+id/nanilhaEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/nomepaiEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/nomemaeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/nomeavompaiEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/nomeavommaeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/nomeavofpaiEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/nomeavofmaeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
